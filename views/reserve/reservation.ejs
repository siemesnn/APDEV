function toggleSeatStatus(seatId) {
    const seat = document.getElementById(seatId);

    if (seat.src.endsWith('available.png')) {
        if (selectedSeatId) {
            const lastSelectedSeat = document.getElementById(selectedSeatId);
            lastSelectedSeat.src = 'assets/available.png'; // Change last selected seat back to available.png
        }
        seat.src = 'assets/selected.png'; // Change image to selected.png
        selectedSeatId = seatId;
    } else if (seat.src.endsWith('selected.png')) {
        seat.src = 'assets/available.png'; // Change image back to available.png
        selectedSeatId = null;
    }
}

function showPopup(seatId) {
